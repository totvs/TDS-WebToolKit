    "module": "commonjs",
    "target": "ES2018",
    "outDir": "./dist",
    "sourceMap": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
